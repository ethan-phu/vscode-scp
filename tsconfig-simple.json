{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out-simple",
        "lib": ["ES2020"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": ["src-simple/*"],
    "exclude": ["node_modules", ".vscode-test", "out-simple"]
}