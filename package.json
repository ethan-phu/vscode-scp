{
    "name": "vscode-scp",
    "displayName": "vscode-scp",
    "description": "Modern VSCode extension for secure file synchronization using SCP protocol",
    "version": "1.0.0",
    "publisher": "aminkira",
    "repository": {
        "github": "https://github.com/TobiasHu2021/vscode-scp"
    },
    "icon": "static/vscode-scp.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vscode-scp.config",
        "onCommand:vscode-scp.local2remote",
        "workspaceContains:**/scp.json"
    ],
    "main": "./out/extension-simple.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-scp.config",
                "title": "vscode-scp: Config"
            },
            {
                "command": "vscode-scp.local2remote",
                "title": "vscode-scp: Local->Rmote"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "vscode-scp.config",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "vscode-scp.local2remote",
                    "when": "explorerResourceIsFolder"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package"
    },
    "dependencies": {
        "archiver": "^5.3.1",
        "crypto": "^1.0.1",
        "ssh2": "^1.14.0"
    },
    "devDependencies": {
        "@types/archiver": "^5.3.2",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.x",
        "@types/ssh2": "^1.15.5",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.19.0",
        "eslint": "^8.50.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "typescript": "^5.9.3"
    }
}
